extends layout

block content
    .inner
      div(class="flex items-center justify-center fixed left-0 bottom-0 w-full h-full bg-gray-800 bg-opacity-50")
        div(class="bg-white rounded-lg w-1/3")
          div(class="flex flex-col items-start p-4")
            div(class="flex items-center justify-center w-full")
              div(class="text-gray-900 font-medium text-2xl w-3/4 m-4") Add Package
                form(action=`/createPackage/${job._id}` method="POST")
                  label(for="packageName") Package Name
                  input(type="text" name="packageName")
                  label(for="packageQuantity") Quantity
                  input(type="number" value="packageQuantity" name="packageQuantity")
                  label(for="packageMaildate") Mail Date
                  input(type="date" value=job.jobMailDate name="packageMaildate")
                  label(for="packageMailingMethod") Mailing Method
                  select(name="packageMailingMethod" id="packageMailingMethod")
                    for option in h.mailingOptions
                      option(value=option ) #{option}
                  label(for="packageSize" )
                  input(type="text" value=job.jobSize name="packageSize" placeholder=job.jobSize)
                  label(for="packageNotes") Notes
                  textarea(name="packageNotes")
                  div(class="ml-auto")
                    button(type="submit" class="pacakge__add bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded w-2/5 m-4") Add
                    button(class="package__close bg-transparent hover:bg-gray-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded w-2/5 m-4") Close
                    
          

