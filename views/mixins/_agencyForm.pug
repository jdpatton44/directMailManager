mixin agencyForm(agency = {})
  form(action=`/addAgency/${agency._id || ''}` method="POST" class="card")
    label(for="agencyName") Agency Name
    input(class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:shadow-outline focus:bg-white shadow-lx" type="text" name="agencyName" value=agency.agencyName)
    label(for="agencyPhoneNumber") Agency Phone Number
    input(class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:shadow-outline focus:bg-white shadow-lx" type="text" name="agencyPhoneNumber" value=agency.agencyPhoneNumber)
    label(for="agencyAddress") Street Address
    input(class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:shadow-outline focus:bg-white shadow-lx" type="text" name="agencyAddress" value=agency.agencyAddress)
    label(for="agencyCity") City
    input(class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:shadow-outline focus:bg-white shadow-lx" type="text" name="agencyCity" value=agency.agencyCity)
    label(for="agencyState") State
    input(class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:shadow-outline focus:bg-white shadow-lx" type="text" name="agencyState" value=agency.agencyState)
    label(for="agencyZipcode") Zip Code
    input(class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:shadow-outline focus:bg-white shadow-lx" type="text" name="agencyZipcode" value=agency.agencyZipcode)
    label(for="agencyNotes") Agency Notes
    textarea(class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:shadow-outline focus:bg-white shadow-lx" name="agencyNotes")=agency.agencyNotes
    p
    input(type="submit" value="Create agency -<", class="button")  