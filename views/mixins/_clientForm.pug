mixin clientForm(client = {})
  form(action=`/addClient/${client._id || ''}` method="POST" class="card" enctype="multipart/form-data")
    label(for="clientName") Client Name
    input(class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:shadow-outline focus:bg-white shadow-lx" type="text" name="clientName" value=client.clientName)
    label(for="clientAbrv") Client Abbreviation
    input(class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:shadow-outline focus:bg-white shadow-lx" type="text" name="clientAbrv" value=client.clientAbrv)
    label(for="clientAgency") Agency
    select(class="block appearance-none w-full bg-gray-200 border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline" name="clientAgency" placeholder="Agency" id="clientAgency")
      <option value="" selected>Select an Agency</option>
      for agency in agencies
        if client.clientAgency && client.clientAgency.equals(agency._id)
          option(value=agency._id selected="true") #{agency.agencyName}
        else
          option(value=agency._id) #{agency.agencyName}
    //- label(for="clientPhoto") Client Photo
        input(type="file" name="clientPhoto" id="clientPhoto" accept="image/gif, image/png, image/jepg")
        if client.clientPhoto
          img(src=`/uploads/${client.clientPhoto}`, alt=client.clientName width=200)
    label(for="clientCRID") Client CRID
    input(class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:shadow-outline focus:bg-white shadow-lx" type="text" name="clientCRID" value=client.clientCRID)
    label(for="clientMID") Client MID
    input(class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:shadow-outline focus:bg-white shadow-lx" type="text" name="clientMID" value=client.clientMID)
    label(for="clientPermitNumber") Permit Number
    input(class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:shadow-outline focus:bg-white shadow-lx" type="text" name="clientPermitNumber" value=client.clientPermitNumber)
    label(for="clientNonProfitNumber") Non Profit Number
    input(class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:shadow-outline focus:bg-white shadow-lx" type="text" name="clientNonProfitNumber" value=client.clientNonProfitNumber)
    label(for="clientAddress") Street Address
    input(class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:shadow-outline focus:bg-white shadow-lx" type="text" name="clientAddress" value=client.clientAddress)
    label(for="clientCity") City
    input(class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:shadow-outline focus:bg-white shadow-lx" type="text" name="clientCity" value=client.clientCity)
    label(for="clientState") State
    input(class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:shadow-outline focus:bg-white shadow-lx" type="text" name="clientState" value=client.clientState)
    label(for="clientZipcode") Zip Code
    input(class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:shadow-outline focus:bg-white shadow-lx" type="text" name="clientZipcode" value=client.clientZipcode)
    label(for="clientNotes") Client Notes
    textarea(class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:shadow-outline focus:bg-white shadow-lx" name="clientNotes")=client.clientNotes
    p
    input(type="submit" value=(client.clientName ? "Update Client -<" : "Create Client -<"), class="button")  