mixin clientForm(client = {})
  form(action=`/addClient/${client._id || ''}` method="POST" class="card")
    label(for="clientName") Client Name
    input(type="text" name="clientName" value=client.clientName)
    label(for="clientAbrv") Client Abbreviation
    input(type="text" name="clientAbrv" value=client.clientAbrv)
    label(for="clientAgency") Agency
    select(name="clientAgency" placeholder="Agency" id="clientAgency")
      for agency in agencies
        option(value=agency._id) #{agency.agencyName}
    label(for="clientCRID") Client CRID
    input(type="text" name="clientCRID" value=client.clientCRID)
    label(for="clientMID") Client MID
    input(type="number" name="clientMID" value=client.clientMID)
    label(for="clientPermitNumber") Permit Number
    input(type="text" name="clientPermitNumber" value=client.clientPermitNumber)
    label(for="clientNonProfitNumber") Non Profit Number
    input(type="text" name="clientNonProfitNumber" value=client.clientNonProfitNumber)
    label(for="clientAddress") Street Address
    input(type="text" name="clientAddress" value=client.clientAddress)
    label(for="clientCity") City
    input(type="text" name="clientCity" value=client.clientCity)
    label(for="clientState") State
    input(type="text" name="clientState" value=client.clientState)
    label(for="clientZipcode") Zip Code
    input(type="text" name="clientZipcode" value=client.clientZipcode)
    label(for="clientNotes") Client Notes
    textarea(name="clientNotes")=client.clientNotes
    p
    input(type="submit" value="Create client -<", class="button")  