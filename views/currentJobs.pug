            th(class="py-4 px-6 bg-green-400 font-bold uppercase text-xl text-grey-dark border-b border-black") Package Sizes
            th(class="py-4 px-6 bg-green-400 font-bold uppercase text-xl text-grey-dark border-b border-black") Rep
            th(class="py-4 px-6 bg-green-400 font-bold uppercase text-xl text-grey-dark border-b border-black") Mailing Method
            th(class="py-4 px-6 bg-green-400 font-bold uppercase text-xl text-grey-dark border-b border-black") Actions
          each job, i in thisWeeksJobs
            tr(class="hover:bg-blue-200") 
              td(class="py-4 px-6 border-b border-grey-light")= h.moment(job.jobMailDate).add(1,"days").format("MM-DD-YYYY")
              if job.jobClient
                td(class="py-4 px-6 border-b border-grey-light")
                  a(href=`/client/${job.jobClient.clientSlug}`) #{job.jobClient.clientName}
              else
                td(class="py-4 px-6 border-b border-grey-light")
              td(class="py-4 px-6 border-b border-grey-light")
                a(href=`/job/${job.jobSlug}`) #{job.jobName}
              td(class="py-4 px-6 border-b border-grey-light")= job.jobQuantity.toLocaleString()
              td(class="py-4 px-6 border-b border-grey-light")= job.jobSize
              if job.jobRep
                td(class="py-4 px-6 border-b border-grey-light")
                  a(href=`/rep/${job.jobRep.repSlug}`) #{job.jobRep.repName} 
              else
                td(class="py-4 px-6 border-b border-grey-light")
              td(class="py-4 px-6 border-b border-grey-light")= job.jobMailingMethod
              td(class="py-4 px-6 border-b border-grey-light")(style='width: 4em')
                a(href=`/jobs/${job._id}/edit`) 
                  != h.icon('pencil') 
