extends layout

block content
  .inner
    h1.text-6xl.py-4 Clients
    div(class="mx-auto ")
      div(class="bg-white shadow-xl rounded my-6")
        table(class="text-left w-full border-collapse")
          thead
            th(class="py-4 px-6 bg-green-400 font-bold uppercase text-xl text-grey-dark border-b border-black") Client Name
            th(class="py-4 px-6 bg-green-400 font-bold uppercase text-xl text-grey-dark border-b border-black") CRID
            th(class="py-4 px-6 bg-green-400 font-bold uppercase text-xl text-grey-dark border-b border-black") MID
            th(class="py-4 px-6 bg-green-400 font-bold uppercase text-xl text-grey-dark border-b border-black") Permit #
            th(class="py-4 px-6 bg-green-400 font-bold uppercase text-xl text-grey-dark border-b border-black") Non Profit #
            th(class="py-4 px-6 bg-green-400 font-bold uppercase text-xl text-grey-dark border-b border-black") Address
            th(class="py-4 px-6 bg-green-400 font-bold uppercase text-xl text-grey-dark border-b border-black") CSZ
            th(class="py-4 px-6 bg-green-400 font-bold uppercase text-xl text-grey-dark border-b border-black") Jobs
          each client, i in clients
            tr(class="hover:bg-blue-200")  
              td(class="py-4 px-6 border-b border-grey-light")
                a(href=`/client/${client.clientSlug}`) #{client.clientName}
              td(class="py-4 px-6 border-b border-grey-light")= client.clientCRID
              td(class="py-4 px-6 border-b border-grey-light")= client.clientMID
              td(class="py-4 px-6 border-b border-grey-light")= client.clientPermitNumber
              td(class="py-4 px-6 border-b border-grey-light")= client.clientNonProfitNumber
              td(class="py-4 px-6 border-b border-grey-light")= client.clientAddress
              if client.clientCity
                td(class="py-4 px-6 border-b border-grey-light") #{client.clientCity} #{client.clientState}, #{client.clientZipcode}
              else
                td(class="py-4 px-6 border-b border-grey-light")
              td(class="py-4 px-6 border-b border-grey-light") 
                a(href=`/clientJobList/${client.clientSlug}`) #{client.clientAbrv} Jobs

