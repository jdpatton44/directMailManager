extends layout

block content
    .inner
      div(class="flex items-center justify-center fixed left-0 bottom-0 w-full h-full bg-gray-800 bg-opacity-50")
        div(class="bg-white rounded-lg w-1/3")
          div(class="flex flex-col items-start p-4")
            div(class="flex items-center justify-center w-full")
              div(class="text-gray-900 font-medium text-2xl w-3/4 m-4 font-bold") Add Rate
                form(action=`/updateClientRate/${client._id}` method="POST" class="card")
                  label(for="clientName") #{client.clientName}
                  input(class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:shadow-outline focus:bg-white shadow-lx" type="text" name="clientName" value=client.clientName disabled)         
                  label(for="rateAmount") Amount
                  input(class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:shadow-outline focus:bg-white shadow-lx" type="float" name="rateAmount" value=(client.clientCommingleRate ? client.clientCommingleRate : '') )        
                  div(class="ml-auto")
                    button(type="submit" class="pacakge__add bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded w-2/5 m-4") Update
                    a(href=`/rateList`)
                      button(type="button" class="rate__close bg-transparent hover:bg-gray-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded w-2/5 m-4") Close